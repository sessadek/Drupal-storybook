{%
  set classes = [
    'article__card',
    bg_color ? 'article__card--' ~ bg_color|clean_class,
  ]
%}
<article class="article__card article__card--{{ bg_color }}">
  {% if title %}
    <h3 class="article__title">{{ title }}</h3>
  {% endif %}
  {# {% if src %}
    <img class="{{ article__image }}"
      src="{{ src }}"
      alt="{{ alt }}"
      {% if width is not empty %}width="{{ width }}%" {% endif %}
      {% if height is not empty %}height="{{ height }}%" {% endif %}
    >
  {% endif %} #}
  {% if teaser %}
    <div class="article__teaser">{{ teaser }}</div>
  {% endif %}
  {% if author %}
    <div class="article__author">
      <em>{{ author }}</em>
    </div>
  {% endif %}
  {# {% if link_title %}
    <a class="btn btn--{{ btn_color }}" href="{{ href }}">{{ link_title }}</a>
  {% endif %} #}
</article>
